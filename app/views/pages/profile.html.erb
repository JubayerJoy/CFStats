<body class = "background centered">

	<% if user_signed_in? %>
		<h3>Hello, <%= current_user.username %>!</h3>    
	<% end %>

	</br>
	<h2>Below you can add/remove your custom Codeforces problems that you want to solve in the future!</h2>

	</br>
	<input type="text" id="add_form" placeholder="Add problem URL" autofocus="true">
	<input type="text" id="delete_form" placeholder="Remove problem URL">

	</br>
	</br>
	<div id = "links">
		<% for user in UserSetting.all %>
			<% if user.username == current_user.username %>
				<% for link in user.settings %>
					<div id = "<%= link %>">
						<%= link %>
					</div>
				<% end %>
			<% end %>
		<% end %>
	</div>

</body>